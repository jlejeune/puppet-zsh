# ls
alias ls='ls --classify --tabsize=0 --literal --color=auto --show-control-chars'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lr='ls -ctrl'
alias lrh='ls -ctrlh'
alias lra='ls -ctrla'

# cp/mv
alias cp='cp --interactive'
alias mv='mv --interactive'

# others
alias c='clear'
alias less='less --quiet'
alias s='cd ..'
alias df='df --human-readable'
alias du='du --human-readable'
